<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/window_bg">

    <LinearLayout
        android:id="@+id/playResultLayoutTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        android:padding="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="20dp">
            <ImageView
                android:id="@+id/playResultImgResultTime"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/ic_time"
                android:visibility="invisible"/>
            <TextView
                android:id="@+id/playResultTvResultTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@android:color/white"
                android:textSize="50sp"/>
        </LinearLayout>
        <View
            android:id="@+id/playResultLineTime"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/playResultLayoutTime"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:padding="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="20dp">
            <ImageView
                android:id="@+id/playResultImgResultCount"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/ic_order"
                android:visibility="invisible"/>
            <TextView
                android:id="@+id/playResultTvResultCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@android:color/white"
                android:textSize="50sp"/>
        </LinearLayout>
        <View
            android:id="@+id/playResultLineCount"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/white"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/playResultIcHome"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:layout_toLeftOf="@+id/playResultIcLoop"
        android:src="@mipmap/ic_home"/>
    <ImageView
        android:id="@+id/playResultIcLoop"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:src="@mipmap/ic_refresh"/>
    <ImageView
        android:id="@+id/playResultIcNext"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:layout_toRightOf="@+id/playResultIcLoop"
        android:src="@mipmap/ic_next"/>
</RelativeLayout>