<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:windowBackground">@color/window_bg</item>
    </style>

    <style name="TransparentActivity" parent="AppTheme">
        <item name="android:windowBackground">@color/activity_trans</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>

    <style name="Default_button">
        <item name="android:background">@drawable/default_button_bg</item>
        <item name="android:textColor">@color/default_button_text</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Default_progress">
        <item name="android:indeterminate">true</item>
        <item name="android:animationResolution">500</item>
        <item name="android:indeterminateDrawable">@drawable/progress</item>
    </style>

    <style name="BuyItemText">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:background">@drawable/buy_item_layout_bg</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:textColor">@color/default_button_text</item>
        <item name="android:drawableLeft">@drawable/ic_favorite_white</item>
    </style>

</resources>
