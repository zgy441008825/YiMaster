CREATE TABLE channelinfo
(
  id      INT AUTO_INCREMENT
    PRIMARY KEY,
  channel VARCHAR(45)  NOT NULL,
  appid   VARCHAR(100) NOT NULL,
  secret  VARCHAR(100) NOT NULL
);

